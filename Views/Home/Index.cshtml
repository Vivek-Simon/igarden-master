@using (Html.BeginForm("getDetails", "Home", FormMethod.Post))
{

    <!-- Header -->
    <header id="header">
        <div class="intro">
            <div class="overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 intro-text">
                            <h1 style="font-size:50px">Intelligent Gardens</h1>
                            <p>
                                Find suitable plants for your garden.
                            </p>
                            
